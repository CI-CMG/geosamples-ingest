<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <outputDirectory>log</outputDirectory>
      <excludes>
        <exclude>**/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/dist/svc</directory>
      <outputDirectory>svc</outputDirectory>
      <includes>
        <include>*.properties</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0660</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/dist/svc</directory>
      <outputDirectory>svc</outputDirectory>
      <includes>
        <include>**/*.service</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0440</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/dist/svc</directory>
      <outputDirectory>svc</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0550</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/dist/doc</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>*.md</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0440</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/dist/config</directory>
      <outputDirectory>config</outputDirectory>
      <includes>
        <include>*.properties</include>
        <include>*.options</include>
        <include>*.xml</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0660</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/dist</directory>
      <outputDirectory/>
      <includes>
        <include>run.sh</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0550</fileMode>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory/>
      <includes>
        <include>*-exe.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>